<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_event"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="@android:color/holo_blue_dark"
    card_view:cardCornerRadius="12dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <TextView
            android:id="@+id/card_ev_event_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:text="Id  "
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/card_ev_event_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/card_ev_event_id"
            android:text="XXX-99999"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/card_ev_cat_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_ev_name_txt"
            android:layout_alignParentStart="true"

            android:layout_marginStart="10dp"
            android:layout_marginTop="11dp"
            android:text="Category Id  "
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/card_ev_cat_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_ev_name_txt"
            android:layout_marginStart="0dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/card_ev_cat_id"
            android:text="XXX-9999"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/card_ev_tickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_ev_name_txt"
            android:layout_marginStart="20dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/card_ev_cat_id_txt"
            android:text="Tickets  "
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/card_ev_tickets_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_ev_name_txt"
            android:layout_marginStart="0dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/card_ev_tickets"
            android:text="XXXXXXXX"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/card_ev_isActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"

            android:layout_below="@+id/card_ev_name_txt"
            android:layout_marginStart="0dp"
            android:layout_marginTop="11dp"
            android:text="Active Status"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/card_ev_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/card_ev_event_id_txt"
            android:text="Name  "
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/card_ev_name_txt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/card_ev_name"
            android:text="XXXXXXX"
            android:textSize="12sp"
            android:textStyle="bold" />




    </RelativeLayout>

</androidx.cardview.widget.CardView>